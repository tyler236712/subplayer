{
    "manifest_version": 2,
    "name": "Subtitle Overlay",
    "version": "1.0",
    "description": "Drag and drop subtitles onto videos and display them.",
    "permissions": [
      "activeTab",
      "storage",
      "<all_urls>"
    ],
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content_script.js"]
      }
    ],
    "browser_action": {
      "default_popup": "subtitles_display.html",
      "default_title": "View Subtitles"
    }
  }
  